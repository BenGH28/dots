# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
	colors {
		background $polar4
		statusline $sky
		separator  $frost4
		
		#colourclass		border		background	text
		focused_workspace 	$frost3		$frost4		$white
		active_workspace	$frost3		$polar2		$white
		inactive_workspace  $polar4		$polar4		$white
		urgent_workspace	$cloudy		$sky		$black			
	}
}
